      workspace  {
        1 output eDP-1
        2 output eDP-1
        3 output eDP-1
        4 output eDP-1
        5 output eDP-1
        6 output HDMI-A-2 DP-1 eDP-1 
        7 output HDMI-A-2 DP-1 eDP-1 
        8 output HDMI-A-2 DP-1 eDP-1 
        9 output HDMI-A-2 DP-1 eDP-1 
        10 output HDMI-A-2 DP-1 eDP-1 
      }
# }}}

