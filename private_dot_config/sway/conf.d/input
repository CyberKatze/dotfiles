# Input configuration {{{

input type:keyboard {
    xkb_layout us,ir,de(qwerty)
    xkb_options grp:alt_shift_toggle
}

# Example configuration:
input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
  }

